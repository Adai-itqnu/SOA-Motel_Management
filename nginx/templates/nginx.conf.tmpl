    # Upstream cho payment-service - lấy từ Consul
    upstream payment_service {
        least_conn;
        {{range service "payment-service"}}
        server {{.Address}}:{{.Port}};
        {{end}}
    }

    # Upstream cho frontend
    upstream frontend_service {
        server frontend:5000;
    }

    server {
        listen 80;
        server_name _;

        # Frontend API (set-session endpoint)
        location /api/set-session {
            proxy_pass http://frontend_service;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Frontend
        location / {
            proxy_pass http://frontend_service;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # Auth Service API
        location /api/auth {
            limit_req zone=api_limit burst=20 nodelay;
            
            # Error handling - trả về JSON thay vì HTML khi upstream lỗi
            proxy_intercept_errors on;
            error_page 502 503 504 = @auth_error;
            
            proxy_pass http://auth_service;
            proxy_http_version 1.1;
            proxy_pass_request_headers on;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            # Forward Authorization header
            proxy_set_header Authorization $http_authorization;
            
            # CORS headers
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;
            
            if ($request_method = 'OPTIONS') {
                return 204;
            }
        }
        
        # Error handler cho auth service - trả về JSON thay vì HTML
        location @auth_error {
            default_type application/json;
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;
            return 503 '{"error": "Service unavailable", "message": "auth-service is not available. Please check Consul service registration."}';
        }


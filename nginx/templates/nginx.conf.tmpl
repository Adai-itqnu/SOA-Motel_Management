        server {{.Address}}:{{.Port}};
        {{end}}
    }

    # Upstream cho report-service - lấy từ Consul
    upstream report_service {
        least_conn;
        {{range service "report-service"}}
        server {{.Address}}:{{.Port}};
        {{end}}
    }

    # Upstream cho frontend
    upstream frontend_service {
        server frontend:3000;
    }

    server {
        listen 80;
        server_name _;

        # Catch-all for unknown API routes.
        # Prevents an infinite proxy loop for /api/* paths that are not explicitly routed below.
        location ^~ /api/ {
            default_type application/json;
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;

            if ($request_method = 'OPTIONS') {
                return 204;
            }

            return 404 '{"error":"Not Found","message":"API route not configured"}';
        }

        # Frontend - proxy to frontend container
        location / {
            proxy_pass http://frontend_service;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # Fix redirect URLs from frontend (port 3000) to gateway (port 80)
            proxy_redirect http://localhost:3000/ http://localhost/;
            proxy_redirect http://frontend:3000/ http://localhost/;
        }

        # Static assets from frontend with caching
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            proxy_pass http://frontend_service;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }

        # Auth Service API
        location /api/auth {
            limit_req zone=api_limit burst=20 nodelay;
            
            proxy_intercept_errors on;
            error_page 502 503 504 = @auth_error;
            
            proxy_pass http://auth_service;
            proxy_http_version 1.1;
            proxy_pass_request_headers on;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Authorization $http_authorization;
            
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;
            
            if ($request_method = 'OPTIONS') {
                return 204;
            }
        }
        
        location @auth_error {
            default_type application/json;
            add_header 'Access-Control-Allow-Origin' '*' always;
            return 503 '{"error": "Service unavailable", "message": "auth-service is not available"}';
        }


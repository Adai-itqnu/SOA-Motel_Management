events {
    worker_connections 1024;
}

http {
    # Rate limiting
    limit_req_zone $binary_remote_addr zone=api_limit:10m rate=10r/s;

    # Upstream cho auth-service - lấy từ Consul
    upstream auth_service {
        least_conn;
        {{range service "auth-service"}}
        server {{.Address}}:{{.Port}};
        {{end}}
    }

